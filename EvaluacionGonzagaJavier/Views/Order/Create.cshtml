@model EvaluacionGonzagaJavier.Models.Order
@{
    ViewData["Title"] = "Crear Orden";
}

<div class="container mt-5">
    <h2 class="mb-4">Nueva Orden</h2>
    <form asp-action="Create" class="needs-validation" novalidate>
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" required>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="UnitPrice" class="form-label"></label>
                <div class="input-group">
                    <span class="input-group-text">$</span>
                    <input asp-for="UnitPrice" class="form-control" required>
                </div>
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Quantity" class="form-label"></label>
                <input asp-for="Quantity" class="form-control" required>
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="Discount" class="form-label"></label>
                <div class="input-group">
                    <input asp-for="Discount" class="form-control" required>
                    <span class="input-group-text">%</span>
                </div>
                <span asp-validation-for="Discount" class="text-danger"></span>
            </div>
        </div>
        <div class="mt-4">
            <button type="submit" class="btn btn-primary">Crear Orden</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Volver a la Lista</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}